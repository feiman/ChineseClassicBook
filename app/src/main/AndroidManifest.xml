<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.d.dao.chineseclassicbook">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/name"
        android:supportsRtl="true"
        android:theme="@style/WelcomeActivityAppTheme"
        tools:replace="android:icon, android:name,android:theme,android:label">

        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/WelcomeActivityAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.home.HomeActivity"
            android:launchMode="singleTask"
            android:theme="@style/CommonActivityAppTheme" />
        <activity
            android:name=".ui.detail.TangDetailActivity"
            android:theme="@style/CommonActivityAppTheme" />
        <activity
            android:name=".ui.detail.LaoZiDetailActivity"
            android:theme="@style/CommonActivityAppTheme" />


    </application>

</manifest>